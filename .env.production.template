# Environment Variables Template for Production
# Copy this file to .env.production and fill in your actual values

# Production Environment
NODE_ENV=production

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# API Configuration (Replace with your deployed backend URL)
VITE_API_URL=https://your-backend-url.com/api

# PayMongo Configuration (Production Keys)
VITE_PAYMONGO_PUBLIC_KEY=pk_live_your_actual_public_key_here
VITE_PAYMONGO_SECRET_KEY=sk_live_your_actual_secret_key_here

# JWT Configuration
JWT_SECRET=your_secure_jwt_secret_here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_production_email@gmail.com
EMAIL_PASS=your_production_app_password

# Frontend URL (Firebase Hosting URL)
FRONTEND_URL=https://your-project.web.app

# Session Configuration
SESSION_SECRET=your_secure_session_secret_here
