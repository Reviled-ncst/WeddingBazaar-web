# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Development Environment
NODE_ENV=development

# Database Configuration (Neon PostgreSQL)
DATABASE_URL=postgresql://username:password@hostname/database?sslmode=require

# API Configuration
VITE_API_URL=http://localhost:3001/api

# PayMongo Configuration (Test Keys)
VITE_PAYMONGO_PUBLIC_KEY=pk_test_your_public_key_here
VITE_PAYMONGO_SECRET_KEY=sk_test_your_secret_key_here

# Production PayMongo Keys (uncomment for production)
# VITE_PAYMONGO_PUBLIC_KEY=pk_live_your_actual_public_key_here
# VITE_PAYMONGO_SECRET_KEY=sk_live_your_actual_secret_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here

# Email Configuration (optional)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Session Configuration
SESSION_SECRET=your_session_secret_here
