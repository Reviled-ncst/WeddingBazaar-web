{
  "name": "wedding-bazaar",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "dev:full": "concurrently \"npm run dev\" \"npm run dev:backend\"",
    "dev:backend": "nodemon --exec tsx server/index.ts",
    "build": "vite build",
    "build:prod": "vite build --mode production",
    "build:staging": "vite build --mode staging",
    "build:backend": "echo 'Backend ready for deployment'",
    "build:full": "npm run build",
    "build:verify": "npm run build:prod && npm run preview --silent",
    "start:backend": "tsx backend-deploy/index.ts",
    "start:prod": "NODE_ENV=production npm run start:backend",
    "lint": "eslint .",
    "preview": "vite preview",
    "start": "npm run dev:full",
    "db:init": "curl -X POST http://localhost:3000/api/admin/init-db",
    "db:init:prod": "curl -X POST $RAILWAY_STATIC_URL/api/admin/init-db",
    "db:setup": "node scripts/setup-database.js",
    "db:init:tables": "tsx scripts/init-database.ts",
    "db:seed": "tsx scripts/seed-database.ts",
    "db:reviews:generate": "node scripts/generate-reviews.cjs",
    "db:reviews:check": "node scripts/check-reviews-table.cjs",
    "db:reviews:sample": "node scripts/show-sample-reviews.cjs",
    "deploy:railway": "npm run build:full && railway up",
    "setup:env": "node scripts/setup-env.js",
    "setup:env:prod": "node scripts/setup-env.js --production",
    "setup:env:force": "node scripts/setup-env.js --force",
    "comment1": "==== HOSTING WORKFLOW SCRIPTS ====",
    "env:production": "copy .env.production .env",
    "env:staging": "copy .env.staging .env",
    "env:development": "copy .env.development .env",
    "env:check": "node scripts/check-env.cjs",
    "health:backend": "curl -f https://weddingbazaar-web.onrender.com/api/health || exit 1",
    "health:frontend": "curl -f https://weddingbazaarph.web.app/ || exit 1",
    "health:database": "node scripts/hosting/check-database-health.js",
    "health:api": "node scripts/hosting/test-api-health.js",
    "health:full": "npm run health:backend && npm run health:database && npm run health:api",
    "health:wait:backend": "node scripts/hosting/wait-for-backend.js",
    "deploy:safe": "node scripts/deploy-safe.cjs",
    "deploy:quick": "npm run build:prod && firebase deploy --only hosting",
    "test:api": "node scripts/hosting/test-api-health.js",
    "test:db": "node scripts/hosting/check-database-health.js",
    "test:registration": "node test-registration.js",
    "test:google-oauth": "node test-google-oauth.js",
    "test:frontend": "node test-frontend.js",
    "test:all": "npm run test:registration && npm run test:google-oauth && npm run test:frontend",
    "smoke:test": "node scripts/hosting/smoke-test.js",
    "smoke:backend": "curl -f https://weddingbazaar-web.onrender.com/api/health && curl -f https://weddingbazaar-web.onrender.com/api/vendors/featured",
    "rollback:frontend": "echo 'Use Firebase console to rollback to previous version'",
    "hotfix:deploy": "npm run build:prod && firebase deploy --only hosting --message 'HOTFIX'",
    "status:full": "npm run health:full",
    "dev:production": "npm run env:production && npm run dev",
    "verify": "node scripts/verify-setup.js",
    "comment2": "==== AUTO DEPLOYMENT SCRIPTS ====",
    "deploy:auto": "powershell -ExecutionPolicy Bypass -File ./scripts/deploy-auto.ps1",
    "deploy:auto:sh": "bash scripts/deploy-auto.sh",
    "deploy:now": "powershell -ExecutionPolicy Bypass -File ./scripts/quick-deploy.ps1",
    "deploy:now:sh": "bash scripts/quick-deploy.sh",
    "deploy:frontend": "npm run build:prod && firebase deploy --only hosting",
    "deploy:backend": "echo 'Backend auto-deploys via Render on git push'",
    "deploy:full": "npm run deploy:auto",
    "deploy:watch": "npm run deploy:backend && npm run deploy:frontend",
    "comment3": "==== DEPLOYMENT VERIFICATION ====",
    "verify:deployment": "node scripts/verify-deployment.js",
    "verify:api": "curl https://weddingbazaar-web.onrender.com/api/health && curl https://weddingbazaar-web.onrender.com/api/vendors/featured",
    "verify:frontend": "curl -I https://weddingbazaar-web.web.app",
    "verify:all": "npm run verify:api && npm run verify:frontend",
    "comment": "postinstall removed - causing issues"
  },
  "dependencies": {
    "@faker-js/faker": "^10.0.0",
    "@headlessui/react": "^2.2.7",
    "@neondatabase/serverless": "^1.0.2",
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@types/leaflet": "^1.9.20",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/qrcode": "^1.5.5",
    "@types/react-router-dom": "^5.3.3",
    "autoprefixer": "^10.4.21",
    "bcrypt": "^6.0.0",
    "bcryptjs": "^3.0.2",
    "cloudinary": "^2.7.0",
    "clsx": "^2.1.1",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^17.2.3",
    "express": "^4.21.2",
    "firebase": "^12.4.0",
    "framer-motion": "^12.23.12",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "leaflet": "^1.9.4",
    "leaflet-control-geocoder": "^3.3.1",
    "lucide-react": "^0.541.0",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.6",
    "nominatim-geocoder": "^0.1.4",
    "pg": "^8.16.3",
    "qrcode": "^1.5.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-leaflet": "^5.0.0",
    "react-router-dom": "^7.8.2",
    "resend": "^6.0.3",
    "tailwind-merge": "^3.3.1",
    "tesseract.js": "^6.0.1",
    "twilio": "^5.9.0",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.33.0",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/bcryptjs": "^2.4.6",
    "@types/cors": "^2.8.19",
    "@types/express": "^4.17.23",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/morgan": "^1.9.10",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@vitejs/plugin-react": "^5.0.0",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "concurrently": "^9.2.1",
    "eslint": "^9.33.0",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-react-refresh": "^0.4.20",
    "globals": "^16.3.0",
    "node-fetch": "^2.7.0",
    "nodemon": "^3.1.10",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.17",
    "ts-node": "^10.9.2",
    "tsx": "^4.20.4",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.39.1",
    "vite": "^7.1.2"
  },
  "description": "This template provides a minimal setup to get React working in Vite with HMR and some ESLint rules.",
  "main": "eslint.config.js",
  "keywords": [],
  "author": "",
  "license": "ISC"
}
